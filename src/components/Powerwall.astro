---
import Section from "./Section.astro";

---

<Section
    title="PowerWall"
    color="black"
>
    <div slot="footer">
        <div class="pb-20">
            <div class="flex flex-row gap-7 justify-center">
                <a
                    href="#"
                    class="bg-slate-200 opacity-95 text-sm rounded font-medium text-black px-[92px] py-2.5 inline-block"
                >
                    <span>Order Now</span>
                </a>
                <a
                    href="#"
                    class="bg-neutral-800 opacity-95 text-sm rounded font-medium text-white px-[92px] py-2.5 inline-block"
                >
                    <span>Learn More</span>
                </a>
            </div>
        </div>
    </div>

    <img
        slot="background"
        src="/powerwall.avif"
        alt="Powerwall"
        class="h-full w-full object-cover object-center"
    />
</Section>