---
const { color, title, subtitle, textSubtitle, subtitleSize  } = Astro.props
const textColor = `text-${color}`
---
<section
    class="landing-section h-screen w-screen text-center overflow-hidden relative"
    data-header-color={color}
>
	<div class="z-30 relative h-full flex flex-col">
		<header class="opacity-80">
			<h1 class={`dark:${textColor} pt-[88px] text-[40px] font-medium`}>{title}</h1>
			<p class={`dark:${textColor} text-base leading-none`}>
				{subtitleSize === 'small' ? (
					<span class="text-sm">{subtitle}</span>
				) : (
					<strong class="text-xl">{subtitle}</strong>
				)}
				<br />
				<sub class="text-xs">{textSubtitle}</sub>
			</p>
		</header>

		<footer class="flex flex-col flex-grow justify-end">
            <slot name="footer" />
		</footer>
	</div>

	<div class="absolute top-0 bottom-0 h-full w-full z-10">
        <slot name="background" />
	</div>
</section>
